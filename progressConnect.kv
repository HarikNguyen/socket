#:kivy 2.0.0
#: import Screen kivy.uix.screenmanager.Screen
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<progressConnect>:
    name: "progressConnect"
    canvas.before:
        Color:
            rgb: 229/255, 229/255, 229/255,1
        Rectangle:
            size: self.size
            pos: self.pos
    FloatLayout:
        # background_color: 229/255, 229/255, 229/255, 1
        Image:
            source: ".\img\covid@1x.png"
            size_hint: 1, 1
            pos_hint: {"center_x": .5, "center_y": .7}
            canvas.before:
                Color:
                    rgb: 229/255, 229/255, 229/255, 1
                Ellipse:
                    size: 130, 130
                    pos: 110, 250
        ProgressBar:
            id: progress_bar
            min: 0
            max: 1
            pos_hint: {"center_x": .5, "center_y": .3}
            size_hint_x: .8
            color: 239/255, 61/255, 35/255, 1
            value: 1
        Label:
            id: label_progress
            text: ""